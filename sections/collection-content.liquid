<style>
  .main-coll-content-d6 {
    background: #F0F0F0;
    padding: 64px;
  }
  .coll-content-flex-d6 {
    width: 100%;
    margin: 0 auto;
    max-width: 1050px;
  }
  .coll-content-flex-d6 h6 {
    color: #121212;
    text-align: center;
    font-family: "DIN Next";
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    margin-bottom: 30px;
  }

  .coll-content-flex-d6 p {
    color: #121212;
    text-align: center;
    font-family: "Libre Franklin";
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 170%; /* 27.2px */
    letter-spacing: 0.64px;
  }

  @media (max-width: 767px) {
    .main-coll-content-d6 {
      background: #F0F0F0;
      padding: 24px 16px;
    }

    .coll-content-flex-d6 h6 {
      font-size: 18px;
      margin-bottom: 16px;
    }

    .coll-content-flex-d6 p {
      font-size: 12px;
      line-height: 110%; /* 13.2px */
      letter-spacing: 0.48px;
    }
  }
</style>
<section>
  <div class="main-coll-content-d6">
    <div class="coll-content-flex-d6">
      <h6>{{ section.settings['sec-title'] }}</h6>
      <p>{{ section.settings['sec-content'] }}</p>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Content Section",
  "settings": [
    {
      "type": "text",
      "id": "sec-title",
      "label": "Heading",
      "default": "Ceramic Travel Mug Replacement Lid & Sleeve Combo"
    },
    {
      "type": "richtext",
      "id": "sec-content",
      "label": "Content"
    }
  ],
  "presets": [
    {
      "name": "Content Section"
    }
  ]
}
{% endschema %}
