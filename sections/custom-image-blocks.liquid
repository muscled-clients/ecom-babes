<div id="section-id-{{ section.id }}">
  <div class="container">
    <div class="d11-collection-block-{{ section.id }}">
      {% for block in section.blocks %}
      <style>
       .d11-col-wrap-{{ section.id }}-{{ block.id }} {
          position: relative;
          text-align: center;
          overflow: hidden;
          width: 48%;
         border-radius: 12px;
         aspect-ratio: 1/.931;
       } 
       .d11-fore_img-{{ block.id }} {
          width: 100%;
          max-width: 100%;
          object-fit: cover;
          transition: transform 0.5s ease;
          border-radius: 12px;
           position: absolute;
            top: 0;
         left: 0;
         width: 100%;
         height: 100%;
       }
       .d11-col-wrap-{{ section.id }}-{{ block.id }}:hover .d11-fore_img-{{ block.id }} {
         transform: scale(1.1);
         border-radius: 12px;
       }
      .heading__d11-{{ section.id }}-{{ block.id }} {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 1; 
        pointer-events: none;
        color: #FFF;
        text-align: center;
        font-family: "Nexa Bold";
        font-size: 48px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
        margin: 0;
        white-space: nowrap;
      }
      @media(max-width: 1023px) {
      .heading__d11-{{ section.id }}-{{ block.id }} {
        font-size: 32px;
      } 
      .d11-col-wrap-{{ section.id }}-{{ block.id }} {
        width: 100%;
      }
      }
      </style>
        <a href="{{ block.settings.img_url }}" class="d11-col-wrap-{{ section.id }}-{{ block.id }}">
            <img class="d11-fore_img-{{ block.id }}" src="{{ block.settings.bg_image | img_url: 'master' }}">
          <h2 class="heading__d11-{{ section.id }}-{{ block.id }}">{{ block.settings.heading }}</h2>
      {% comment %}
          <div class="d11-background-img-{{ section.id }}-{{ block.id }}">
            <img src="{{ block.settings.bg_image | img_url: 'master' }}">
          </div>
          <!-- Text container -->
          <div class="d11__content-wrap-{{ section.id }}-{{ block.id }}">
            <h2 class="heading__d11-{{ section.id }}-{{ block.id }}">{{ block.settings.heading }}</h2>
          </div>
      {% endcomment %}
        </a>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .d11-collection-block-{{ section.id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 15px;
  }

  #section-id-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media(max-width: 1023px) {
    .d11-collection-block-{{ section.id }} {
      flex-direction: column;
    }
    #section-id-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_m }}px;
      padding-bottom: {{ section.settings.padding_bottom_m }}px;
    }
  }
</style>

{% schema %}
  {
    "name": "Collection Blocks",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "label": "Padding Top Desktop",
        "min": 0,
        "max": 150,
        "step": 5,
        "unit": "px",
        "default": 125
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding Bottom Desktop",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 96
      },
      {
        "type": "range",
        "id": "padding_top_m",
        "label": "Padding Top Mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 48
      },
      {
        "type": "range",
        "id": "padding_bottom_m",
        "label": "Padding Bottom Mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 64
      }
    ],
    "blocks": [
     {
       "type": "blocks",
       "name": "Image",
       "settings": [
         {
           "type": "url",
           "id": "img_url",
           "label": "URL",
           "default": "/"
         },
         {
          "type": "image_picker",
          "id": "bg_image",
          "label": "Collection Image"
         },
         {
           "type": "text",
           "id": "heading",
           "label": "Heading"
         }
       ]
     }
    ],
    "presets": [
      {
        "name": "Collection Blocks",
        "settings": {
        }
      }
    ]
  }
{% endschema %}
